							</div>

							{% if is_granted('ROLE_ADMIN') %}

							<div class="carousel-item avatar">
								<img src="{{ asset('images/trainers/Spirit.gif') }}" class="d-block trainer-gif" alt="..." data-avatar="Spirit">
							</div>

							<div class="carousel-item avatar">
								<img src="{{ asset('images/trainers/LD.gif') }}" class="d-block trainer-gif" alt="..." data-avatar="LD">
